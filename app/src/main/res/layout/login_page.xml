<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/b20">

    <EditText
        android:id="@+id/InputEmailLogin"
        android:layout_width="259dp"
        android:layout_height="56dp"
        android:accessibilityLiveRegion="none"
        android:backgroundTint="#C84560"
        android:ems="10"
        android:fontFamily="@font/fredoka_one"
        android:hint="masukkan email Anda"
        android:inputType="textPersonName"
        android:textColor="#C84560"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.348" />

    <EditText
        android:id="@+id/InputSandiLogin"
        android:layout_width="260dp"
        android:layout_height="59dp"
        android:accessibilityLiveRegion="none"
        android:backgroundTint="#C84560"
        android:ems="10"
        android:fontFamily="@font/fredoka_one"
        android:hint="masukkan sandi Anda"
        android:inputType="textPersonName"
        android:textColor="#C84560"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/InputEmailLogin"
        app:layout_constraintVertical_bias="0.042" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="251dp"
        android:layout_height="50dp"
        android:backgroundTint="#CC7285"
        android:fontFamily="@font/fredoka_one"
        android:text="Masuk"
        android:textAllCaps="false"
        android:textColor="#FDFBFB"
        android:textSize="16sp"
        android:textStyle="bold"
        android:typeface="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/InputSandiLogin"
        app:layout_constraintVertical_bias="0.082" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnShowPassword"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Show/Hide Password"
        android:foreground="?attr/selectableItemBackground"
        android:insetTop="6dp"
        android:insetBottom="6dp"
        app:icon="@drawable/close_eye2"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:iconTint="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/InputSandiLogin"
        app:layout_constraintEnd_toEndOf="@+id/InputSandiLogin"
        app:layout_constraintTop_toTopOf="@+id/InputSandiLogin"
        app:layout_constraintVertical_bias="0.5" />


</androidx.constraintlayout.widget.ConstraintLayout>
